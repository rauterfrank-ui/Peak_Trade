{
  "uid": "peaktrade-shadow-pipeline-mvs",
  "title": "Peak_Trade — Shadow Pipeline (MVS, Contract v1)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["peak_trade", "observability", "shadow", "pipeline", "mvs", "contract_v1"],
  "time": { "from": "now-30m", "to": "now" },
  "links": [
    {
      "type": "link",
      "title": "Operator Home",
      "url": "/d/peaktrade-operator-home",
      "targetBlank": false,
      "keepTime": true,
      "includeVars": true
    },
    {
      "type": "link",
      "title": "Contract Details",
      "url": "/d/peaktrade-contract-details",
      "targetBlank": false,
      "keepTime": true,
      "includeVars": true
    },
    {
      "type": "link",
      "title": "Overview (Local vs Main)",
      "url": "/d/peaktrade-overview",
      "targetBlank": false,
      "keepTime": true,
      "includeVars": true
    },
    {
      "type": "link",
      "title": "Execution Watch Overview",
      "url": "/d/peaktrade-execution-watch-overview",
      "targetBlank": false,
      "keepTime": true,
      "includeVars": true
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_SHADOW",
        "label": "Prometheus (shadow)",
        "query": "prometheus",
        "current": { "text": "prometheus-shadow", "value": "peaktrade-prometheus-shadow" },
        "options": [],
        "refresh": 1,
        "hide": 2
      },
      {
        "type": "datasource",
        "name": "DS_LOCAL",
        "label": "Prometheus (local)",
        "query": "prometheus",
        "current": { "text": "prometheus-local", "value": "peaktrade-prometheus-local" },
        "options": [],
        "refresh": 1,
        "hide": 2
      },
      {
        "type": "datasource",
        "name": "DS_MAIN",
        "label": "Prometheus (main)",
        "query": "prometheus",
        "current": { "text": "prometheus-main", "value": "peaktrade-prometheus-main" },
        "options": [],
        "refresh": 1,
        "hide": 2
      },
      {
        "type": "custom",
        "name": "mode",
        "label": "mode",
        "query": "shadow,live",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "text": "shadow", "value": "shadow" }
      },
      {
        "type": "custom",
        "name": "exchange",
        "label": "exchange",
        "query": "kraken,sim",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Contract metric present? peak_trade_pipeline_events_total",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 5, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "((absent(peak_trade_pipeline_events_total) OR on() vector(0)))"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "PRESENT" }, "1": { "text": "MISSING" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          },
          "links": [
            {
              "title": "Contract Details",
              "url": "/d/peaktrade-contract-details?var-metric=peak_trade_pipeline_events_total",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Contract metric present? peak_trade_pipeline_latency_seconds_bucket",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 5, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "((absent(peak_trade_pipeline_latency_seconds_bucket) OR on() vector(0)))"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "PRESENT" }, "1": { "text": "MISSING" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          },
          "links": [
            {
              "title": "Contract Details",
              "url": "/d/peaktrade-contract-details?var-metric=peak_trade_pipeline_latency_seconds_bucket",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Contract metric present? peak_trade_risk_blocks_total",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 5, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "((absent(peak_trade_risk_blocks_total) OR on() vector(0)))"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "PRESENT" }, "1": { "text": "MISSING" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          },
          "links": [
            {
              "title": "Contract Details",
              "url": "/d/peaktrade-contract-details?var-metric=peak_trade_risk_blocks_total",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Pipeline Event Throughput (by stage)",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 5 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (mode, stage) (rate(peak_trade_pipeline_events_total{mode=~\"$mode\",exchange=~\"$exchange\"}[5m]))",
          "legendFormat": "{{mode}} {{stage}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Pipeline Error Rate",
      "description": "Uses clamp_min(..., 1e-9) on the denominator to avoid 0-denominator spikes during low traffic / warmup.",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "fieldConfig": { "defaults": { "unit": "percentunit", "min": 0, "max": 1 }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(peak_trade_pipeline_events_total{stage=\"error\",mode=~\"$mode\",exchange=~\"$exchange\"}[5m])) / clamp_min(sum(rate(peak_trade_pipeline_events_total{mode=~\"$mode\",exchange=~\"$exchange\"}[5m])), 1e-9)",
          "legendFormat": "error_rate"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Risk Blocks (by reason)",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (mode, reason) (rate(peak_trade_risk_blocks_total{mode=~\"$mode\"}[5m]))",
          "legendFormat": "{{mode}} {{reason}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (intent → ack)",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 22 },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le, mode) (rate(peak_trade_pipeline_latency_seconds_bucket{edge=\"intent_to_ack\",mode=~\"$mode\",exchange=~\"$exchange\"}[5m])))",
          "legendFormat": "p95 {{mode}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Feed Gaps (optional)",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 22 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (mode, feed) (rate(peak_trade_feed_gaps_total{mode=~\"$mode\"}[15m]))",
          "legendFormat": "{{mode}} {{feed}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Run State (optional)",
      "datasource": { "type": "prometheus", "uid": "${DS_SHADOW}" },
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 31 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (mode, state) (peak_trade_run_state{mode=~\"$mode\"})",
          "legendFormat": "{{mode}} {{state}}"
        }
      ]
    }
  ]
}
